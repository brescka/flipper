{
  "name": "Flipper",
  "version": "1.0",
  "description": "An extension for rotating and mirroring videos, images, text and more.",
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "scripts": ["src/js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["src/js/content.js"],
      "css": ["src/css/content.css"],
      "run_at": "document_end"
    }
  ],
  "manifest_version": 2
}